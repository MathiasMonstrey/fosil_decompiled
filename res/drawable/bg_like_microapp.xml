<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="2dp" />
                    <solid android:color="@color/hex33000000" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="2dp" />
                    <solid android:color="@color/hex33000000" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/hex08000000" />
                    <corners android:radius="2dp" />
                    <solid android:color="@c2076a/white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
